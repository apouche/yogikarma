@charset "UTF-8";

/********************************************************/
/*						   Tags							*/
/********************************************************/
body 
{
	font: 0.62em verdana, arial, sans-serif;
	color: #000;
	background: #444 url('/img/background/tibetan.png') repeat;
	width:100%;
	padding:0;
	margin:0;
	/*margin: 15px auto 20px auto;*/
}

a  		{ color: #8cef5f; text-decoration: none; }
a:hover { text-decoration: underline; }
a img 	{ border:none; }
a.none 	{ text-decoration:none; }

.clear 	{ clear:both; }

h1 { font: 700 1.5em verdana, sans-serif; display:inline; color:#222;}

/********************************************************/
/*						  Top Div						*/
/********************************************************/

#top { width:100%; height:30px; }

#top-left
{
	width:150px;
	float:left;
	height:inherit;
	background: -moz-linear-gradient(left, #399905, #143306);	/* Firefox */
    background: -webkit-gradient(linear, left top, right top, from(#399905), to(#143306));  /* Chrome, Safari:*/
    filter: progid:DXImageTransform.Microsoft.Gradient(StartColorStr='#399905', EndColorStr='#143306', GradientType=1); /* MSIE */
}

#top-right
{
	width:150px;
	float:right;
	height:inherit;
	background: -moz-linear-gradient(left, #143306, #399905);	/* Firefox */
    background: -webkit-gradient(linear, left top, right top, from(#143306), to(#399905));  /* Chrome, Safari:*/
    filter: progid:DXImageTransform.Microsoft.Gradient(StartColorStr='#143306', EndColorStr='#399905', GradientType=1); /* MSIE */
}

#top-center 		{ background-color:#84e259; height:inherit; overflow:hidden;}
#top-center #leaves { background-image: url('/img/logos/leaves.jpg'); position:relative; float:left; top:3px; width:30px; left:5px; height:inherit;  }
#top-center #title	{ position:relative; width:30px; left:4px; top: 6px; height:inherit;  }

#top-center #items 	{ float:right; width: auto; margin:1px auto; text-align:right;  }

#items ul 				{ margin: 0; padding: 0; line-height: normal; }
#items ul li 			{ min-width: 90px; display: inline; float: left; padding: 8px 0; list-style: none; text-align: center; }
#items ul li a 			{ display: block; text-decoration: none; text-transform: uppercase; padding-bottom: 1.0em; color: #222; }
#items ul li a:hover,
#items ul li a.active 	{ font-weight: bold; color: #111; background: url('/img/background/menu_tab.gif') no-repeat bottom center; }


/********************************************************/
/*						Main Div						*/

#main			{ clear:both; }
#main-left 		{ float:left; width:150px; }
#main-right 	{ float:right; width:150px; }
#main-center 	{ width:auto; background-color:#444; margin:0 150px 0 150px; padding: 0px 0 10px 0; }

/********************************************************/
/*						Container Div					*/
						
#container-top-left 	{ float: left; width:350px; min-height:16px; background:#444 url('/img/background/plant_top.jpg') top right no-repeat;}
#container-top-right	{}

#container			{ color: #EEE; padding:0; min-height:600px;}
#container-left 	{ clear:left;float: left; width:350px; min-height:588px; background:#444 url('/img/background/plant_bottom.jpg') bottom right no-repeat;}
#container-right 	{ margin-left:350px; }

/********************************************************/
/*						    Footer 						*/
/********************************************************/


#footer 		{color: #777; clear:both; font-size:smaller; }

#footer-left 	{ float:left; width:150px; }
#footer-right 	{ float:right; width:150px; }
#footer-center 	{ padding:5px 0; background-color: #444; margin:0 150px 0 150px; }
#footer #contact{ float: right; position:relative; right:10px; }



